<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
	<title>Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css" />
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css" />
</head>
<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper my-5">
		<div class="row">
			<% productos.forEach(function(product) { %>
				<div class="col-12 col-sm-6 col-lg-3 mb-4">
					<section class="product-box text-center p-3 border rounded">
						<a href="/products/detalle/<%= product.id %>" style="text-decoration: none; color: inherit;">
							<figure class="product-box_image mb-2">
								<img src="/images/products/<%= product.foto_Producto %>" alt="<%= product.nombre_producto %>" style="max-width: 100%; height: 150px; object-fit: cover;">
							</figure>
							<article class="product-box_data">
								<h5 class="mb-1"><%= product.nombre_producto %></h5>
								<p class="small text-muted"><%= product.descripcion_Producto %></p>
								<p class="small text-secondary">
									Subido por: 
									<a href="/users/profile/<%= product.user.id %>">
										<%= product.user.email %>
									</a>
								</p>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>

	<!-- Footer -->
	<%- include("./partials/footer") %>
	<!-- /Footer -->
</body>
</html>
